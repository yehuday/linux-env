#Defaults
escape ``
startup_message off
vbell on
vbell_msg " Blue. Blue. "

defscrollback 99999
attrcolor b ".I"
termcap xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
termcapinfo xterm ti@:te@
defbce "on"

term xterm-256color

#Setup hardstatus complete with formatting
hardstatus on
hardstatus alwayslastline '%{gk}[%= %{wk}%?%-Lw%?%{=b kR}[%{W}%n%f %t%?(%u)%?%{=b kR}]%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C} %{W}'

# Helpc copying to keyboard
#bindkey -m ' ' eval 'stuff \040' 'writebuf' 'exec sh -c "cat /tmp/screen-exchange | clipit"'

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock

#Default screens
screen -t Unused        0
screen -t Shell         1
screen -t vim           2
screen -t inst-0        3
screen -t inst-1        4
screen -t droplet	5
screen -t te-shell      6
screen -t te-vim        7
screen -t efa-tool	8
screen -t efa-tool-vim	9

select 0
